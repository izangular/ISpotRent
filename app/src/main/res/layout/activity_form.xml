<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
   android:background="@drawable/launch"
   android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_above="@+id/textView"
            android:layout_alignParentStart="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="25dp"
            android:src="@drawable/rentxperts_logo" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/firstNameMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyErrorText"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:textColorHint="@android:color/white"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/firstName"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:inputType="textPersonName"
                            android:paddingTop="1dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/lastNameMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyErrorText"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:textColorHint="@android:color/white"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/lastName"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            android:inputType="textPersonName"
                            android:paddingTop="1dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textColorHint="@color/white"
                            android:textColorLink="@android:color/background_light"
                            android:textSize="16sp"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/emailMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/MyErrorText"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:textColorHint="@android:color/white"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingTop="1dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textColorHint="@color/white"
                            android:textColorLink="@android:color/background_light"
                            android:textSize="16sp"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/phoneMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/white"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:theme="@style/MyErrorText"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:inputType="phone"
                            android:paddingTop="1dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textColorHint="@color/white"
                            android:textColorLink="@android:color/background_light"
                            android:textSize="16sp"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>
                <RelativeLayout
                    android:id="@+id/progressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                    <ProgressBar
                        android:id="@+id/progressBarAppraisal"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Register"
            android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>

